{
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[git-commit]": {
        "rewrap.wrappingColumn": 72
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "djot": false,
        "Djot": false
    },
    "editor.fontSize": 14,
    "editor.lineHeight": 1.3,
    "terminal.integrated.fontSize": 10,

    "accessibility.dimUnfocused.enabled": false,
    "projectNameInStatusBar.align": "right",
    "projectNameInStatusBar.textStyle": "uppercase",
    "workbench.panel.opensMaximized": "never",
    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "hidden",
    "window.newWindowDimensions": "maximized",
    "window.restoreWindows": "none",
    "window.title": "${rootPath}",
    "filePathBar.statusBarAlignment": "right",
    "workbench.editor.showTabs": "none",
    "workbench.editor.labelFormat": "long",
    "workbench.editor.enablePreview": true,
    "workbench.panel.defaultLocation": "left",
    "workbench.sideBar.location": "left",
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tree.indent": 16,
    "workbench.useExperimentalGridLayout": true,
    "outline.showVariables": false,
    "breadcrumbs.showVariables": false,
    "editor.accessibilitySupport": "off",
    "editor.codeLens": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.cursorSurroundingLines": 5,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "'JetBrains Mono'",
    "editor.fontLigatures": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.formatOnType": true,
    "editor.hover.enabled": "off",
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.renderWhitespace": "none",
    "editor.roundedSelection": false,
    "editor.semanticHighlighting.enabled": true,
    "editor.tabCompletion": "onlySnippets",
    "editor.inlineSuggest.enabled": false,
    "editor.suggestOnTriggerCharacters": false,
    "editor.quickSuggestions": {
        "other": "off",
        "comments": "off",
        "strings": "off"
    },
    "editor.wordBasedSuggestions": "allDocuments",
    "editor.autoIndent": "advanced",
    "editor.semanticTokenColorCustomizations": {
        "[Xcode 11 Default Light]": {
            "rules": {
                "unresolvedReference": "#FF0050"
            }
        },
        "[Pale Fire High Contrast]": {
            "rules": {
                "unresolvedReference": "#9C6363",
                "parameter": "#DCDCCC",
                "property": "#DFAF8F"
            }
        }
    },
    // small gutter
    // "editor.folding": false,
    "editor.glyphMargin": false,
    "editor.lineDecorationsWidth": 0, // undocumented
    "editor.lineNumbers": "off",
    "editor.lineNumbersMinChars": 0, // undocumented
    // "keyboard.dispatch": "keyCode",
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 1,
    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,
    "extensions.verifySignature": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 100,
    "files.enableTrash": true,
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.sendKeybindingsToShell": false,
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt",
        "editor.action.marker.nextInFiles"
    ],
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.autoRepositoryDetection": "openEditors",
    "git.openRepositoryInParentFolders": "always",
    "debug.onTaskErrors": "debugAnyway",
    "remote.SSH.useLocalServer": false,
    "chat.instructionsFilesLocations": {
        ".github/instructions": true,
        "/var/folders/5p/hj6g32gj0_700q3tgctb49fh0000gn/T/postman-collections-post-response.instructions.md": true,
        "/var/folders/5p/hj6g32gj0_700q3tgctb49fh0000gn/T/postman-collections-pre-request.instructions.md": true,
        "/var/folders/5p/hj6g32gj0_700q3tgctb49fh0000gn/T/postman-folder-post-response.instructions.md": true,
        "/var/folders/5p/hj6g32gj0_700q3tgctb49fh0000gn/T/postman-folder-pre-request.instructions.md": true,
        "/var/folders/5p/hj6g32gj0_700q3tgctb49fh0000gn/T/postman-http-request-post-response.instructions.md": true,
        "/var/folders/5p/hj6g32gj0_700q3tgctb49fh0000gn/T/postman-http-request-pre-request.instructions.md": true
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
}
